{
    "ldflags": [
        "-fp hardware",
        "-nodefaults",
        "-listclosure",
        "-code_merging safe,aggressive"
    ],
    "cflags": {
        "base": {
            "base": null,
            "flags": [
                "-nodefaults",
                "-nosyspath",
                "-gccinc",

                "-maxerrors 1",

                "-proc gekko",
                "-align powerpc",
                "-enum int",
                "-fp hardware",

                "-pragma \"cats off\"",
                "-pragma \"warn_notinlined off\""
            ]
        },
        "runtime": {
            "base": "base",
            "flags": [
                "-str reuse,pool,readonly",
                "-use_lmw_stmw on",
                "-common off",

                "-O4,p",
                "-inline auto"
            ]
        },
        "rvl_sdk": {
            "base": "base",
            "flags": [
                "-func_align 16"
            ]
        },
        "rb3": {
            "base": "base",
            "flags": [
                "-sdata 2",
                "-sdata2 2",
                "-str reuse,pool",
                "-func_align 4",

                "-fp_contract on",
                "-pragma \"merge_float_consts on\"",

                "-RTTI on",
                "-Cpp_exceptions off",

                "-O4,s",
                "-inline off",

                "-d NDEBUG"
            ]
        }
    }
}
