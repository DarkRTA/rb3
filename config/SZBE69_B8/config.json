        "sdk/RVL_SDK/bte": {
            "base": "base",
            "flags": [
                "-sdata 2",
                "-sdata2 2",
                "-str reuse,pool",
                "-pragma \"merge_float_consts on\"",

                "-lang=c99",
                "-O4,p",
